# ============================================
# Portfolio Backend - Environment Variables
# ============================================
# Copy this file to .env and configure your values
# ============================================

# App Configuration
APP_NAME=Portfolio Backend
APP_VERSION=1.0.0
DEBUG=True

# API
API_V1_PREFIX=/api/v1

# CORS - Comma-separated origins
CORS_ORIGINS=["http://localhost:4200","http://localhost:3000"]

# Database - MySQL (XAMPP)
# Formato: mysql+pymysql://usuario:password@host:puerto/nombre_bd
DATABASE_URL=mysql+pymysql://root:@localhost:3306/portfolio_db

# Nota: En XAMPP por defecto:
# - Usuario: root
# - Password: (vacío)
# - Puerto: 3306

# JWT Security
SECRET_KEY=your-super-secret-key-change-in-production-minimum-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# File Storage
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760
ALLOWED_EXTENSIONS=[".md",".pdf",".png",".jpg",".pcap"]

# ============================================
# Admin User (para create_admin.py)
# ============================================
# Configura estas variables antes de ejecutar el script
ADMIN_EMAIL=admin@tudominio.com
ADMIN_USERNAME=admin
ADMIN_PASSWORD=CambiaEstaContraseñaSegura123!
