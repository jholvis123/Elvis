# Stage 1: Build the Angular application
FROM node:18-alpine AS build

WORKDIR /app

# Copy package.json and package-lock.json from portafolio subdirectory
COPY portafolio/package*.json ./

# Install dependencies
RUN npm ci

# Copy the rest of the application code from portafolio
COPY portafolio/ .

# Build the application for production
RUN npm run build -- --configuration production

# Stage 2: Serve the application with Nginx
FROM nginx:alpine

# Copy the built artifacts from the previous stage (Angular 16 output path)
COPY --from=build /app/dist/portafolio /usr/share/nginx/html

# Copy custom Nginx configuration (from root of front-end context)
COPY nginx.conf /etc/nginx/conf.d/default.conf

# Expose port 80
EXPOSE 80

# Start Nginx
CMD ["nginx", "-g", "daemon off;"]
